<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>JSP Example</display-name>

  <servlet>
    <servlet-name>AreaCheckServlet</servlet-name>
    <servlet-class>se.ifmo.ru.AreaCheckServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AreaCheckServlet</servlet-name>
    <url-pattern>/areaCheckServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ControllerServlet</servlet-name>
    <servlet-class>se.ifmo.ru.ControllerServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ControllerServlet</servlet-name>
    <url-pattern>/controllerServlet</url-pattern>
  </servlet-mapping>

</web-app>